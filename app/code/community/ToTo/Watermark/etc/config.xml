<config>
    <modules>
        <ToTo_Watermark>
            <version>0.1.0</version>
        </ToTo_Watermark>
    </modules>
    <frontend>
        <routers>
            <watermark>
                <use>standard</use>
                <args>
                    <module>ToTo_Watermark</module>
                    <frontName>watermark</frontName>
                </args>
            </watermark>
        </routers>
        <layout>
            <updates>
                <watermark>
                    <file>watermark.xml</file>
                </watermark>
            </updates>
        </layout>
    </frontend>
	<global>
        <models>
            <catalog>
                 <rewrite>
                    <product_image>ToTo_Watermark_Catalog_Model_Product_Image</product_image>
                 </rewrite>
            </catalog>
        </models>
        <helpers>
            <catalog>
                <rewrite>
                    <image>ToTo_Watermark_Catalog_Helper_Image</image>
                </rewrite>
            </catalog>
        </helpers>
    </global>
</config>